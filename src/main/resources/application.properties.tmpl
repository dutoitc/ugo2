# --- Tenant (fictitious) ---
tenant.id=tenant1
tenant.display-name=My WebTV

# --- Database (one DB per tenant) ---
spring.datasource.url=jdbc:mariadb://localhost:3306/ugo_tenant1
spring.datasource.username=ugo
spring.datasource.password=change-me

spring.sql.init.mode=never
spring.flyway.enabled=true
# For skeleton, allow baseline on empty DB
spring.flyway.baseline-on-migrate=true

# --- Platforms ---
platforms.facebook.api-version=v23.0
platforms.facebook.page-ids=123456789012345
platforms.facebook.access-token=fb-***-placeholder

platforms.youtube.channel-ids=UCxxxxxxxxxxxxxxxx
platforms.youtube.api-key=yt-***-placeholder

platforms.instagram.business-ids=
platforms.instagram.access-token=ig-***-placeholder

platforms.wordpress.endpoints=https://example.com/wp-json/wp/v2/posts?_fields=id,date,link,title,excerpt,slug&per_page=50

# --- Ingest & quotas ---
ingest.resume-checkpoints=true

# --- Storage parsimony ---
metrics.min-delta-relative=0.01
metrics.min-delta-absolute=10
metrics.daily-guard-snapshot=true

# --- Stars (gradient) ---
stars.thresholds.one-star-gradient=0.50
stars.thresholds.two-stars-gradient=1.50

# --- Alerts ---
alerts.milestone-step=1000
alerts.emails=alerts@example.org
alerts.stale-stats-hours=24

# --- Logging ---
logging.level.ch.mno.ugo2=INFO


# ===== Batch =====
app.batch.initial=false
app.batch.rolling-days=7

# ===== Platforms =====
app.platforms.fb.enabled=true
app.platforms.fb.page-id=1234567890
app.platforms.fb.access-token=***-placeholder

app.platforms.yt.enabled=true
app.platforms.yt.channel-id=UCxxxxxxxxxxxxxxxx
app.platforms.yt.api-key=***-placeholder

app.platforms.ig.enabled=false
app.platforms.ig.user-id=
app.platforms.ig.access-token=

app.platforms.wp.enabled=true
app.platforms.wp.base-url=https://example.org

# ===== Budgets per run (soft caps) =====
app.budgets.fb-calls=5000
app.budgets.yt-calls=5000
app.budgets.ig-calls=5000
app.budgets.wp-calls=2000
