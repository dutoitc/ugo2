# --- Compression ---
<IfModule mod_deflate.c>
  SetOutputFilter DEFLATE
  AddOutputFilterByType DEFLATE \
    application/atom+xml application/javascript application/json application/ld+json \
    application/manifest+json application/rdf+xml application/rss+xml application/schema+json \
    application/vnd.geo+json application/vnd.ms-fontobject application/x-font-ttf \
    application/x-javascript application/x-web-app-manifest+json application/xhtml+xml \
    application/xml font/eot font/opentype image/bmp image/svg+xml image/vnd.microsoft.icon \
    image/x-icon text/cache-manifest text/css text/html text/javascript text/plain \
    text/vcard text/vnd.rim.location.xloc text/vtt text/x-component text/x-cross-domain-policy text/xml
</IfModule>

# --- Sécurité : bloquer l’accès à .git (hérité) ---
RedirectMatch 404 /\.git

# --- Routage API uniquement sous /api/* ---
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  # Laisser passer les fichiers/répertoires existants
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
  # Router l’API vers index.php
  RewriteRule ^api/ index.php [QSA,L]
</IfModule>
